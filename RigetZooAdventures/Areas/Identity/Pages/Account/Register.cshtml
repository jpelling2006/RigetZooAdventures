@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    var roles = (List<IdentityRole>)ViewData["roles"];
}

<br /><br />

<div class="row">

    @* Registration Form *@
    <div class="col-lg-6" style="border-right: solid; border-right-color: #fe701a; border-right-width: 1px; padding-right: 25px;">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 style="text-align: center;">Register</h2>
            <br />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">

                    @* Title *@
                    <select asp-for="Input.Title" class="form-control" autocomplete="title" aria-required="true">
                        <option selected>Title</option>
                        <option value="Mr">Mr</option>
                        <option value="Mrs">Mrs</option>
                        <option value="Miss">Miss</option>
                        <option value="Ms">Ms</option>
                        <option value="Mx">Mx</option>
                        <option value="Dr">Dr</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Input.Title" class="text-danger"></span>
                </div>
                <div class="col-sm-9">

                    @* First Name *@
                    <div class="form-floating mb-3">
                        <input asp-for="Input.FirstName" class="form-control" autocomplete="first-name" aria-required="true" placeholder="first name" />
                        <label asp-for="Input.FirstName">First Name</label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            @* Last Name *@
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" autocomplete="last-name" aria-required="true" placeholder="first name" />
                <label asp-for="Input.LastName">Last Name</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            @* Phone Number *@
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="last-name" aria-required="true" placeholder="phone number" />
                <label asp-for="Input.PhoneNumber">Phone Number</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary" style="width: auto; margin: auto; display: block;">Register</button>
        </form>
        <br /><br />
    </div>

    <br />

    <div class="col-lg-6">
        <section>
            <h2 style="text-align: center;">Have an account?</h2>

            <br />
            @* Button to Register *@
            <div class="row">
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"><button class="btn btn-primary btn-lg" style="width: auto; margin: auto; display: block;" type="button">Login</button></a>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
